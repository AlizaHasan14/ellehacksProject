<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saba.cfpprofile.transportationRoutine">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Let us know more about your transportation routine!"
        android:textColor="@android:style/Theme.Black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        app:layout_constraintHorizontal_bias="0.181"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:text="On average, how long is your commute everyday?"
        android:textColor="@android:style/Theme.Black"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="73dp"/>

    <EditText
        android:id="@+id/commuteHour"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="73dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="110dp"
        tools:text="hours"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:text="What kind of public transportation do you use and how long on average do you use them daily?"
        android:textColor="@android:style/Theme.Black"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="158dp"/>

    <CheckBox
        android:id="@+id/subwayCheckBox"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:text="subway/street cars"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="212dp"/>

    <CheckBox
        android:id="@+id/busCheckBox"
        android:layout_width="198dp"
        android:layout_height="32dp"
        android:text="bus"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="254dp"/>

    <EditText
        android:id="@+id/subwayText"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="212dp"/>

    <EditText
        android:id="@+id/busText"
        android:layout_width="73dp"
        android:layout_height="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="254dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="226dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="265dp"/>

</android.support.constraint.ConstraintLayout>
